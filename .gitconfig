[core]
  excludesfile = ~/.gitignore
[alias]
	permission-reset = !git diff -p -R | grep -E \"^(diff|(old|new) mode)\" | git apply
	la = log --oneline --decorate --all --graph
	find = log --oneline --name-status --grep
	sdiff = diff --ignore-space-at-eol -b -w --ignore-blank-lines
[push]
	default = simple
[pull]
	ff = only
[credential]
	helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
[user]
	email = superjun1@gmail.com
	name = Jeremiah Men√©trey
[log]
	abbrevCommit = true
[diff]
	wsErrorHighlight = all
[diff "archive"]
	# Assumes 7zip is installed
	textconv = 7z -so e
	binary = true
